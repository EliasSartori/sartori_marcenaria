<!-- Page Content -->
<div class="container">

    <!-- Jumbotron Header -->
    <header class="jumbotron my-4 text-center" style="background-image: url('https://www.pixeden.com/media/k2/galleries/220/001-wood-melamine-subttle-pattern-background-pat.jpg'); background-repeat: no-repeat; background-size: cover;">
    <h1 class="display-3"><strong>Sartori Marcenaria</strong></h1>
    <h4 style="margin-top: 20px;"><strong>Melhores produtos no setor marceneiro!</strong></h4>
    <h4 style="margin-top: 40px;">Confira nossos produtos abaixo!</h4>
    </header>

    <!-- Page Features -->
    <div class="row text-center">
    <% @products.each do |product| %>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card">
            <%= image_tag product.image.url(:medium) , class: "card-img-top"%>
            <div class="card-footer">
                <h4 class="card-title"><strong><%= product.name %></strong></h4>
                <p class="card-text">Pre√ßo: <%= number_to_currency(product.price) %></p>
                <p class="card-text">Estoque: <strong><%= product.quantity %></strong> unidades</p>
            </div>
            <div class="card-footer">
                <%= if user_signed_in?
                    link_to  "Ver Produto", site_home_path(product), class: "btn btn-dark" 
                 else
                    link_to  "Ver Produto", new_user_session_path, class: "btn btn-dark"
                 end
                %>
            </div>
            </div>
        </div>
    <% end %>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
