<p id="notice"><%= notice %></p>

<h1>Listing Products Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Unitary value</th>
      <th>Total value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products_orders.each do |products_order| %>
      <tr>
        <td><%= products_order.order %></td>
        <td><%= products_order.product %></td>
        <td><%= products_order.quantity %></td>
        <td><%= products_order.unitary_value %></td>
        <td><%= products_order.total_value %></td>
        <td><%= link_to 'Show', products_order %></td>
        <td><%= link_to 'Edit', edit_products_order_path(products_order) %></td>
        <td><%= link_to 'Destroy', products_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

