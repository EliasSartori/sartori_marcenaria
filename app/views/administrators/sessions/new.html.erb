<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <% flash.each do |key, value| %>
                    <% if value %>
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                            <%= value %>
                        </div>
                    <% end %>
                <% end %>
                <div class="panel-heading">
                    <h3 class="panel-title">Entrar - <strong>Administrativo</strong></h3>
                </div>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="panel-body">
                      <form role="form">
                          <fieldset>
                              <div class="form-group">
                                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-mail", type: "email", required: "required"%>
                              </div>
                              <div class="form-group">
                                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha", type: "password", required: "required" %>
                              </div>
                              <%= f.submit "Entrar", class: "btn btn-lg btn-success btn-block" %>
                          </fieldset>
                      </form>
                  </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
