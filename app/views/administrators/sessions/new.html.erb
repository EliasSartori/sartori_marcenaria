<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Entrar</h3>
                </div>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="panel-body">
                      <form role="form">
                          <fieldset>
                              <div class="form-group">
                                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-mail", type: "email"%>
                              </div>
                              <div class="form-group">
                                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha", type: "password", value: "" %>
                              </div>
                              <div class="checkbox">
                                <% if devise_mapping.rememberable? -%>
                                <label>
                                    <%= f.check_box :remember_me %>Lembrar-me
                                </label>
                                <% end -%>
                              </div>
                              <!-- Change this to a button or input when using this as a form -->
                              <%= f.submit "Entrar", class: "btn btn-lg btn-success btn-block" %>
                          </fieldset>
                      </form>
                      <%= render "administrators/shared/links" %>
                  </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
