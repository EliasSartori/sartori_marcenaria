<%= render partial: "layouts/site_shared/navigation" %>
<div class="container col-5" style="border: 1px solid#888; border-radius: 0.3rem; margin-top: 20px; margin-bottom: 11.2%; ">
    <div style="margin-top:50px;" >
        <div class="panel panel-info" >
            <div class="panel-heading">
                <div class="panel-title"><h2><strong>Cadastrar</strong> - Sartori Marcenaria</h2></div>
            </div>
            <div style="padding-top:30px" class="panel-body" >
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <div style="margin-bottom: 25px" class="input-group">
                          <%= f.email_field :email, id: "login-username", type: "Email", 
                          class: "form-control", placeholder: "Email", required: "required" %>
                      </div>
                      <div style="margin-bottom: 25px" class="input-group">
                          <%= f.password_field :password, id: "login-username", type: "password", 
                          class: "form-control", placeholder: "Senha", required: "required" %>
                      </div>
                      <div style="margin-bottom: 25px" class="input-group">
                          <%= f.password_field :password_confirmation, id: "login-username", type: "password",
                          class: "form-control", placeholder: "Confirme sua senha", required: "required" %>
                      </div>
                      <div style="margin-top:10px" class="form-group">
                          <!-- Button -->
                          <div>
                              <%= f.submit "Cadastrar", class: "btn btn-success", id: "btn-login" %>
                          </div>
                      </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
<%= render partial: "layouts/site_shared/footer" %>