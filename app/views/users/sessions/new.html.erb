<%= render partial: "layouts/site_shared/navigation" %>
<div class="container col-4" style="border: 1px solid#888; border-radius: 0.3rem; margin-top: 20px; margin-bottom: 7.55%; ">
    <div style="margin-top:50px;" >
        <div class="panel panel-info" >
            <div class="panel-heading">
                <div class="panel-title"><h2><strong>Entrar</strong> - Sartori Marcenaria</h2></div>
            </div>
            <div style="padding-top:30px" class="panel-body" >
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                      <div style="margin-bottom: 25px" class="input-group">
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "login-username", type: "text", class: "form-control", placeholder: "Email" %>
                      </div>
                      <div style="margin-bottom: 25px" class="input-group">
                          <%= f.password_field :password, autocomplete: "off", autocomplete: "email", id: "login-username", type: "password", class: "form-control", placeholder: "Senha" %>
                      </div>
                      <div style="margin-top:10px" class="form-group">
                          <!-- Button -->
                          <div>
                              <%= f.submit "Entrar", class: "btn btn-success", id: "btn-login" %>
                          </div>
                      </div>
                      <div class="form-group">
                          <div>
                              <div style="border-top: 1px solid#888; padding: 15px 0px 0 2px;" >
                                  <p>NÃ£o possui conta?<p> 
                                  <%= link_to  "Cadastrar", new_user_registration_path , class: "btn btn-primary" %>
                              </div>
                          </div>
                      </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
<%= render partial: "layouts/site_shared/footer" %>