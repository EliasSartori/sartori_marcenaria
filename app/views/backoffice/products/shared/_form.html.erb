<h1 class="page-header">Produtos</h1>
<% if @product.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <ul>
            <% @product.errors.full_messages.each do |message| %>
                <li>
                    <%= message %>
                </li>
            <% end %>
        </ul>
    </div>
<% end %>
<div class="panel panel-default">
    <div class="panel-heading">
        <%= name %>
    </div>
    <div class="panel-body">
        <div class="col-lg-6">
            <%= form_for([:backoffice, @product]) do |f| %>
            <div class="form-group">
                <label>Nome</label>
                    <%= f.text_field :name, class: "form-control", placeholder: "Ex.: Cadeira, Mesa"%>
            </div>
            <div class="form-group">
                <label>Descrição</label>
                    <%= f.text_area :description, class: "form-control", placeholder: "Ex.: Cadeira de Angico, palha de plástico"%>
            </div>
            <div class="form-group">
                <label>Quantidade</label>
                <%= f.text_field :quantity, class: "form-control", placeholder: "Ex.: 15, 100"%>
            </div>
            <div class="form-group">
                <label>Preço</label>
                <%= f.text_field :price, class: "form-control", placeholder: "Ex.: 35.5, 50"%>
            </div>
            <button type="submit" class="btn btn-success">Salvar</button>
            <% end %>
        </div>
    </div>
</div>