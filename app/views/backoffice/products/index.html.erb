<h1 class="page-header"><strong>Produtos</strong></h1>
<% if notice %>
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <%= notice %>
    </div>
<% end %>
<div class="panel panel-default">
    <div class="panel-heading">
        Lista de Produtos
        <%= link_to new_backoffice_product_path  do %>
            <button type="button" class="btn btn-success btn-circle pull-right" style="margin-top:-5px;"><i class="fa fa-plus"></i>
            </button>
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Quantidade</th>
                        <th>Preço</th>
                        <th style="width: 9.5%">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    <% @products.each do |product| %>
                        <tr>
                            <td><%= product.id %></td>
                            <td><%= product.name %></td>
                            <td><%= product.quantity %></td>
                            <td><%= product.price %></td>
                            <td>
                                <%= link_to edit_backoffice_product_path(product), class: "btn btn-warning btn-circle" do %>
                                    <i class="fa fa-pencil"></i>
                                <% end %>
                                <%= link_to backoffice_product_path(product),  method: :delete, class: "btn btn-danger btn-circle",
                                                                               data: { confirm: 'Você deseja realmente excluir?' } do %>
                                    <i class="fa fa-trash"></i>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>