<h1 class="page-header"><strong>Cidades</strong></h1>
<% if notice %>
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <%= notice %>
    </div>
<% end %>
<div class="panel panel-default">
    <div class="panel-heading">
        Lista de Cidades
        <%= link_to new_backoffice_city_path  do %>
            <button type="button" class="btn btn-success btn-circle pull-right" style="margin-top:-5px;"><i class="fa fa-plus"></i>
            </button>
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>CEP</th>
                        <th>Estado</th>
                        <th style="width: 9%">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    <% @cities.each do |city| %>
                        <tr>
                            <td><%= city.id %></td>
                            <td><%= city.description %></td>
                            <td><%= city.cep %></td>
                            <td><%= city.state.description %></td>
                            <td>
                                <%= link_to edit_backoffice_city_path(city), class: "btn btn-warning btn-circle" do %>
                                    <i class="fa fa-pencil"></i>
                                <% end %>
                                <%= link_to backoffice_city_path(city),  method: :delete, class: "btn btn-danger btn-circle", 
                                                                         data: { confirm: 'Você deseja realmente excluir?' } do %>
                                    <i class="fa fa-trash"></i>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>