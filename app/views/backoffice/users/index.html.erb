<h1 class="page-header"><strong>Usuários</strong></h1>
<% if notice %>
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <%= notice %>
    </div>
<% end %>
<div class="panel panel-default">
    <div class="panel-heading">
        Lista de Usuários
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Telefone</th>
                        <th style="width: 9%">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.phone %></td>
                            <td>
                                <%= link_to edit_backoffice_user_path(user), class: "btn btn-warning btn-circle" do %>
                                    <i class="fa fa-pencil"></i>
                                <% end %>
                                <%= link_to backoffice_user_path(user),  method: :delete, class: "btn btn-danger btn-circle", data: { confirm: 'Você deseja realmente excluir?' } do %>
                                    <i class="fa fa-trash"></i>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>